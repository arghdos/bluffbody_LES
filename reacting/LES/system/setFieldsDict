FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// also includes meshdims
#include "../0/initialValues"

defaultFieldValues
(
    volScalarFieldValue T $Tref
);

regions
(
    sphereToCell
    {
        // set box of really high temperature to ignite the gas behind the bluff-body
        centre (#calc "$width * 0.5 * $convertToMeters" #calc "$height * 0.5 * $convertToMeters" #calc "-($L_TE_upstream + 0.25 * $D) * $convertToMeters");
        radius #calc "0.125 * $D * $convertToMeters";
        fieldValues
        (
            volScalarFieldValue T 2000
        );
    }
);


