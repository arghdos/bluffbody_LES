FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      b;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

// from http://www.tfd.chalmers.se/~hani/kurser/OS_CFD_2010/ehsanYasari/ehsanYasariReport.pdf
// and XiFoam tutorial

internalField           uniform 1;

boundaryField
{
    top_wall
    {
        type            zeroGradient;
    }
    bottom_wall
    {
        type            zeroGradient;
    }
    bluff_body
    {
        type            zeroGradient;
    }
    left_wall
    {
        type            symmetryPlane;
    }
    right_wall
    {
        type            symmetryPlane;
    }
    inlet
    {
        type            calculated;
        value           $internalField;
    }
    outlet
    {
        type            calculated;
        value           $internalField;
    }
}


// ************************************************************************* //
