FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}

/*

Setup for simulation of Volvo flygmotor AB non-reacting flow LES

Nicholas Curtis - 04/20/2018

Based on:

Cocks et al: https://arc.aiaa.org/doi/abs/10.2514/6.2013-170
Wolf: http://www.wolfdynamics.com/wiki/OFtipsandtricks.pdf
Manual: https://cfd.direct/openfoam/user-guide/fvSolution/
PRM: https://github.com/ParticulateFlow/OSCCAR-doc/blob/master/openFoamUserManual_PFM.pdf

*/

solvers
{
	// rho / pressure solver from fireFoam / xiFoam LES examples
	"(p|rho)"
    {
        solver              PCG;
        preconditioner      FDIC;
        tolerance           1e-6;
        relTol              0.01;
    };

    "(p|rho)Final"
    {
    	$p
    	relTol				0;
    }

    "(U|h)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        // from fireFoam LES example -- relTol bumped down to 0.05 from 0.01
		tolerance       1e-6;
        relTol          0.1;
        nSweeps         1;
    };

    "(U|h)Final"
    {
        $U;
        relTol          0.0;
    };

    Yi
    {
    	$U
    	tolerance		1e-8;
    };

    YiFinal
    {
    	$Yi
    	relTol          0;
    };
}

PIMPLE
{
	// manual - PISO, SIMPLE and PIMPLE algorithms
	// neither low RE nor multi-phase -> use momentum corrector
    momentumPredictor yes;
    nOuterCorrectors  1;
    nCorrectors       2;
    // wolf p.g., 43
	nNonOrthogonalCorrectors 1;
	maxDeltaT		  1e-6;
}

relaxationFactors
{
    equations
    {
        ".*"            1;
    }
}
