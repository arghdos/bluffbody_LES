FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      meshDims;
}

/*

Mesh dimensions for Volvo Flygmotor AB bluff body simulation based on Cocks et al.

Nick Curtis - 04/10/2018

*/

// specify in millimeters
convertToMeters 0.001;

// mesh size
mesh_size      ${mesh_size}; //mm

// define bluff body dimension
D              0.04; // m
half_D         #calc "$D / 2.0";   //m
two_D          #calc "2.0 * $D";   //m
three_D        #calc "3.0 * $D";   //m
three_halves_D #calc "1.5 * $D";   //m

// and channel dimensions
width          $two_D;
height         $three_D;

// total channel length
// up-stream of bluff-body (from trailing edge)
L_TE_upstream       #calc "-1 * 0.2"; // mm
// down-stream of bluff-body (from trailing edge)
L_TE_downstream     0.682; // mm
L_total             0.882; // mm
BB_height           #calc "$D * sqrt(3.0) / 2.0"; // mm
L_LE_upstream       #calc "-1 * $BB_height"; //mm
