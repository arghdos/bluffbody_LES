FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
// Based on suggestions from MVP2:
// https://community.apan.org/cfs-file/__key/widgetcontainerfiles/3fc3f82483d14ec485ef92e206116d49-g-_2D00_tM6tEO4PkenM5KsnY8ctg-page-0cases/MVP2_5F00_Validation_5F00_Case_5F00_Final.pdf

dimensions              [1 -1 -2 0 0 0 0];

#include                "initialValues";
#include                "../system/meshDims";

// from MVP2
internalField           uniform #calc "$Ps";

boundaryField
{
    inlet
    {
        type            zeroGradient;
    }
    top_wall
    {
        type            zeroGradient;
    }
    bottom_wall
    {
        type            zeroGradient;
    }
    bluff_body
    {
        type            zeroGradient;
    }
    left_wall
    {
        type            symmetryPlane;
    }
    right_wall
    {
        type            symmetryPlane;
    }
    outlet
    {
        // MVP2 recommends transmissive BC w/ target P = 100kPa
        type            waveTransmissive;
        field           p;
        // gamma from inlet_calculator.py (no burning)
        gamma           $gamma;
        fieldInf        $Pref
        value           $internalField;
        // a measure of how far away the far-field condition should be
        lInf            $L_total;
    }
}


// ************************************************************************* //
