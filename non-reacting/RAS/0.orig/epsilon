FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      epsilon;
}

// Initializer for TKE for RANS -- based on SANDIA Flame D OpenFOAM example //

//obtain kguess
#include "k";
#remove "(?!kguess)";

dimensions      [0 2 -1 0 0 0 0];

// turbulent length scale from Cocks et al.
tl              0.005; // 5mm
Cmu             0.9; // default
epsilon_guess   #calc "($Cmu**(0.75) * $kguess**(1.5)) / $tl";
internalField   uniform $epsilon_guess;


dimensions      [0 2 -3 0 0 0 0];

boundaryField
{
    // since our mesh is refined for LES - we don't really need wall functions
    top_wall
    {
        type            epsilonWallFunction;
        value           $internalField;
    }
    bottom_wall
    {
        type            epsilonWallFunction;
        value           $internalField;
    }
    bluff_body
    {
        type            epsilonWallFunction;
        value           $internalField;
    }
    inlet
    {
        // don't set to zero to avoid division by zero
        type            fixedValue;
        value           $internalField;
    }
    outlet
    {
        type            zeroGradient;
    }
    left_wall
    {
        type            symmetryPlane;
    }
    right_wall
    {
        type            symmetryPlane;
    }
}


// ************************************************************************* //
