FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      k;
}

// Initializer for TKE for RANS
dimensions      [0 2 -2 0 0 0 0];

//obtain Ubulk
#include                "ransInitialValues";
internalField           uniform 1e-12;

boundaryField
{
    // the maximum wall normal distance is < 0.3mm, and from
    // http://www.pointwise.com/yplus/, the expected y+ is ~0.0166 mm, hence we need
    // a wall treatment
    top_wall
    {
        // use small k value at resolved wall
        type            fixedValue;
        value           1e-12;
    }
    bottom_wall
    {
        // use small k value at resolved wall
        type            fixedValue;
        value           1e-12;
    }
    bluff_body
    {
        // use small k value at resolved wall
        type            fixedValue;
        value           1e-12;
    }
    left_wall
    {
        type            symmetry;
    }
    right_wall
    {
        type            symmetry;
    }
    inlet
    {
        // no turbulence at inlet
        type            fixedValue;
        value           uniform 1e-12;
    }
    outlet
    {
        type            zeroGradient;
    }
}
