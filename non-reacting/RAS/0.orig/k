FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      k;
}
//obtain Ubulk
#include "U";
#remove "(?!Ubulk)";


// Initializer for TKE for RANS
// Assume -- a turblence intensity of ~ 0.05
dimensions      [0 2 -2 0 0 0 0];

intensity       0.05;
kguess          #calc "1.5 * ($Ubulk * $intensity)**2";
internalField   uniform $kguess;

boundaryField
{
    // the maximum wall normal distance is < 0.3mm, and from
    // http://www.pointwise.com/yplus/, the expected y+ is ~0.0166 mm, hence we need
    // a wall treatment
    top_wall
    {
        type            epsilonWall;
        value           $internalField;
    }
    bottom_wall
    {
        type            kqRWallFunction;
        value           $internalField;
    }
    bluff_body
    {
        type            kqRWallFunction;
        value           $internalField;
    }
    left_wall
    {
        type            symmetryPlane;
    }
    right_wall
    {
        type            symmetryPlane;
    }
    inlet
    {
        // no turbulence at inlet
        type            fixedValue;
        value           0;
    }
    outlet
    {
        type            zeroGradient;
    }
}
