FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// From Sandia Flame D case, we can set the walls ot nutkWallFunction w/ value 0
// and inlets / outlets as calculated

internalField           0;

boundaryField
{
    // the maximum wall normal distance is < 0.3mm, and from
    // http://www.pointwise.com/yplus/, the expected y+ is ~0.0166 mm, hence we need
    // a wall treatment
    top_wall
    {
        type            nutkWallFunction;
        value           $internalField;
    }
    bottom_wall
    {
        type            nutkWallFunction;
        value           $internalField;
    }
    bluff_body
    {
        type            nutkWallFunction;
        value           $internalField;
    }
    inlet
    {
        type            calculated;
        value           $internalField;
    }
    outlet
    {
        type            calculated;
        value           $internalField;
    }
    left_wall
    {
        type            symmetryPlane;
    }
    right_wall
    {
        type            symmetryPlane;
    }
}
