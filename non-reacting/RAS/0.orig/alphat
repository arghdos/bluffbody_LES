FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      alphat;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -1 0 0 0 0];

// again from Sandia Flame-D case, set walls to alphatWallFunction w/ default prandtl # of 0.85

internalField           uniform 1e-6;

boundaryField
{
    top_wall
    {
        type            calculated;
        value           $internalField;
    }
    bottom_wall
    {
        type            calculated;
        value           $internalField;
    }
    bluff_body
    {
        type            calculated;
        value           $internalField;
    }
    left_wall
    {
        type            symmetry;
    }
    right_wall
    {
        type            symmetry;
    }
    inlet
    {
        type            calculated;
        value           $internalField;
    }
    outlet
    {
        type            calculated;
        value           $internalField;
    }
}


// ************************************************************************* //
