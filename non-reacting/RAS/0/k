FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      k;
}
// Initializer for TKE for RANS -- based on SANDIA Flame D OpenFOAM example //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 30;

boundaryField
{
    // since our mesh is refined for LES - we don't really need wall functions
    top_wall
    {
        type            zeroGradient;
    }
    bottom_wall
    {
        type            zeroGradient;
    }
    bluff_body
    {
        type            calculated;
        value           $internalField;
    }
    inlet
    {
        type            zeroGradient;
    }
    outlet
    {
        type            zeroGradient;
    }
    left_wall
    {
        type            symmetryPlane;
    }
    right_wall
    {
        type            symmetryPlane;
    }
}
