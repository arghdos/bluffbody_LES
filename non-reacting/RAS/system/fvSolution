FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}

/*

Setup for simulation of Volvo flygmotor AB non-reacting flow LES

Nicholas Curtis - 04/10/2018

Based on:

Cocks et al: https://arc.aiaa.org/doi/abs/10.2514/6.2013-170
Wolf: http://www.wolfdynamics.com/wiki/OFtipsandtricks.pdf
Manual: https://cfd.direct/openfoam/user-guide/fvSolution/
PRM: https://github.com/ParticulateFlow/OSCCAR-doc/blob/master/openFoamUserManual_PFM.pdf

*/

solvers
{
	"rho.*"
    {
        solver          diagonal;
    }

	// solver based on Sandia Flame-D example
    p
	{
		solver            PCG;
		preconditioner    DIC;
        tolerance         1e-05;
        relTol            0.05;
        minIter           3;
	}
	pFinal
	{
        $p
        tolerance         1e-06;
		relTol            0;
	}

    U
    {
        solver              PBiCGStab;
        preconditioner      DILU;
        tolerance           1e-08;
        relTol              0;
        minIter             3;
    }
    UFinal
    {
        $U
    }

    "(h|k|epsilon|omega)"
    {
        solver              PBiCGStab;
        preconditioner      DILU;
        tolerance           1e-6;
        relTol              0.1;
        minIter             3;
    };

    "(h|k|epsilon|omega)Final"
    {
        $h
        tolerance           1e-8;
        relTol              0;
    };

    // for non-reacting, other mass fractions are zero
    Yi
    {
        solver              PBiCGStab;
        preconditioner      DILU;
        tolerance           1e-8;
        relTol              0;
        minIter             3;
    };
}

PIMPLE
{
	// manual - PISO, SIMPLE and PIMPLE algorithms
	// neither low RE nor multi-phase
    momentumPredictor yes;
    nOuterCorrectors  1;
    nCorrectors       2;
    // wolf p.g., 43
	nNonOrthogonalCorrectors 1;
}

relaxationFactors
{
    equations
    {
        ".*"            1;
    }
}
