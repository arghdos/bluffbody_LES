FoamFile
{
    version         2;
    format          ascii;
    class           dictionary;
    location        "system";
    object          controlDict;
}

/*

Setup for simulation of Volvo flygmotor AB non-reacting flow LES

Nicholas Curtis - 04/05/2018

*/


// use same settings for both non-reacting & reacting simulations per Cocks et al.
application     reactingFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

// ~ equivalent to 40 residence times
endTime         2;

// larger time step
deltaT          1e-4;
maxCo			0.25

// output -- mostly pulled from combustion/reactingFoam/RAS/SandiaD_LTS tutorial
writeControl    timeStep;
writeInterval   10;
purgeWrite      0;
writeFormat     binary;
writePrecision  10;
writeCompression no;
timeFormat      general;
timePrecision   6;
runTimeModifiable true;
