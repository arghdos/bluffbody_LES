FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      epsilon;
}

#include                "ransInitialValues";
internalField           uniform $epsilon_guess;
dimensions              [0 2 -3 0 0 0 0];

boundaryField
{
    top_wall
    {
        type            epsilonWallFunction;
        value           $internalField;
    }
    bottom_wall
    {
        type            epsilonWallFunction;
        value           $internalField;
    }
    bluff_body
    {
        type            epsilonWallFunction;
        value           $internalField;
    }
    inlet
    {
        // don't set to zero to avoid division by zero
        type            fixedValue;
        value           $internalField;
    }
    outlet
    {
        type            zeroGradient;
    }
    left_wall
    {
        type            symmetry;
    }
    right_wall
    {
        type            symmetry;
    }
}


